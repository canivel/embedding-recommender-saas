# ============================================================================
# OBSERVABILITY STACK ENVIRONMENT CONFIGURATION
# ============================================================================

# Copy this file to .env and customize for your environment:
# cp .env.example .env

# ============================================================================
# GRAFANA CONFIGURATION
# ============================================================================

# Grafana admin credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# Connection string for postgres_exporter
POSTGRES_CONNECTION_STRING=postgres://postgres:postgres@postgres:5432/postgres?sslmode=disable

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Redis connection
REDIS_ADDRESS=redis:6379

# ============================================================================
# ALERTING CONFIGURATION
# ============================================================================

# Slack webhook URL for alerts
# Get this from: https://api.slack.com/apps/YOUR_APP/incoming-webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty integration
# Get service key from PagerDuty account
PAGERDUTY_SERVICE_KEY=YOUR_PAGERDUTY_SERVICE_KEY

# ============================================================================
# ENVIRONMENT
# ============================================================================

ENVIRONMENT=development
TZ=UTC

# ============================================================================
# OBSERVABILITY RETENTION POLICIES
# ============================================================================

# Prometheus metrics retention
PROMETHEUS_RETENTION=30d

# Loki logs retention
LOKI_RETENTION_DAYS=7

# Jaeger traces retention
JAEGER_RETENTION_DAYS=3
